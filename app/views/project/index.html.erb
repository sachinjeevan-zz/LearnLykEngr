        <div class="card">
            <div class="card-image">
                <%= image_tag project.image, class:"responsive-img" %>
            </div>
            <div class="card-content" style="height: 8em;text-align: center;">
                <span class="card-title grey-text text-darken-4">
                <%= project.name %>
                </span>
            </div>
        </div>
    </div>
    <% end %>
    <% end %>
</div>
